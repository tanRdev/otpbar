{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OTPBar",
  "version": "1.0.0",
  "identifier": "com.otpbar.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OTPBar",
        "width": 320,
        "height": 420,
        "resizable": false,
        "transparent": true,
        "hiddenTitle": true,
        "center": false,
        "decorations": false,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": ["icons/icon.png"],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "entitlements": "build/entitlements.plist",
      "signingIdentity": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
