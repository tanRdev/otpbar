{
  "name": "otpbar",
  "version": "1.0.0",
  "description": "Menubar app that monitors Gmail for OTP codes and copies them to clipboard",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "node ./scripts/release.js"
  },
  "author": "Tan R. <tanRdev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tanRdev/otpbar"
  },
  "homepage": "https://github.com/tanRdev/otpbar#readme",
  "bugs": {
    "url": "https://github.com/tanRdev/otpbar/issues"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "googleapis": "^140.0.0",
    "keytar": "^7.9.0",
    "menubar": "^9.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "canvas": "^3.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.otpbar.app",
    "productName": "OTPBar",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*.js",
      "dist/**/*.js.map",
      "!dist/mac/**",
      "!dist/mac-arm64/**",
      "!dist/*.dmg",
      "package.json",
      "index.html",
      "renderer.js",
      "styles.css"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "fileAssociations": [],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/**/*.node"
    ],
    "npmRebuild": true
  }
}
